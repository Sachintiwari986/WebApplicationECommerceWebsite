<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="pull-right">
            <li style="list-style:none">   <a class="btn btn-info" style="margin-bottom:10px" href="@Url.Action("AddEdit","Product")" ><i class="fa fa-plus"></i> Add New</a> </li>
